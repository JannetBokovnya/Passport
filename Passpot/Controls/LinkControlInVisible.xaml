<UserControl x:Class="Passpot.Controls.LinkControlInVisible"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:telerik="clr-namespace:Telerik.Windows.Controls;assembly=Telerik.Windows.Controls"
             mc:Ignorable="d"
   >

    <Grid Name="gridlink">
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
           
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="270"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock x:Name="titleBox" Grid.Column="0" Margin="5" TextWrapping="Wrap" 
                       HorizontalAlignment="Stretch" VerticalAlignment="Center" FontFamily="Tahoma"/>
            <TextBlock x:Name="valueBox" Grid.Column="2" MinWidth="200"  HorizontalAlignment="Stretch"
                       VerticalAlignment="Center" FontFamily="Tahoma"  />
      </Grid>
      
    </Grid>
</UserControl>
