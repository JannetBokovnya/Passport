<UserControl x:Class="Passpot.Controls.CheckBoxControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    >
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition Height="1"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="270" />
                <ColumnDefinition Width="10" />
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock x:Name="titleBox" Grid.Column="0" Margin="4"
                       Style="{StaticResource TextBlockStylePassport}" />
            <CheckBox x:Name="checkBox" Grid.Column="2"  Margin="4" HorizontalAlignment="Stretch" VerticalAlignment="Center"
                      Checked="checkBox_Checked" Unchecked="checkBox_Unchecked"/>
        </Grid>
        <Border Grid.Row="1" BorderBrush="Silver" BorderThickness="1"/>
    </Grid>
</UserControl>
