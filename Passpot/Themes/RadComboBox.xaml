            <!--кнопка-->
            <Border Background="{TemplateBinding Background}" CornerRadius="{StaticResource SplitButton_SpanCornerRadiusComboBox}" IsHitTestVisible="False"/>

            <telerik:RadToggleButton x:Name="PART_DropDownButton" ClickMode="Press" Foreground="{TemplateBinding Foreground}" IsTabStop="False" Margin="0" Padding="0" 
